<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorWheat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/life_picture"
            android:layout_margin="8dp"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.youth.banner.Banner
            app:banner_default_image="@drawable/life_bg"
            android:layout_margin="5dp"
            android:id="@+id/life_banner"
            app:image_scale_type="center_crop"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_margin="5dp">

            <android.support.v7.widget.CardView
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_gravity="fill"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorLightRed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_today"
                        android:scaleType="centerCrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="15dp"
                        android:text="@string/today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:text="@string/today_intro"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorLightGreen">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:text="@string/book"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_gravity="fill"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorLightDarkBlue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_film"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:text="@string/film"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_gravity="fill"
                android:layout_marginRight="2dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorStarBlue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_tab_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:text="@string/default_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_gravity="fill"
                android:layout_marginLeft="2dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorLightYellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_tab_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:text="@string/default_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_gravity="fill"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorLightBrulyWood">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_tab_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:text="@string/default_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </GridLayout>
    </LinearLayout>

</ScrollView>