<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/listDividerAlertDialog"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@color/colorLightAccent"
        android:text="@string/note_dialog_title"/>
    <EditText
        android:id="@+id/et_note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:maxLines="1"
        android:hint="@string/note_edit_hint"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <Button

            android:id="@+id/btn_note_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWheat"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="40dp"
            android:background="@color/colorLightBrulyWood"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/note_save_selected"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_note_selected"/>
            <ImageView
                android:id="@+id/note_save"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_note_save"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_note_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorLightPink"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>