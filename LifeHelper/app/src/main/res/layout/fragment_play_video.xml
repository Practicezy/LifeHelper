<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <VideoView
        android:id="@+id/vv_normal"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <SeekBar
        android:id="@+id/sb_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp">
        <ImageButton
            android:id="@+id/ibtn_video_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_pause"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/ibtn_video_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_replay"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/ibtn_video_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_share"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/ibtn_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_play"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_playTitle"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorLightBlack"
        android:text="送给还在坚持的你：打败心中的野兽"
        tools:ignore="HardcodedText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_playCategory"
        android:textColor="@color/colorWheat"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="生活 / 60 /"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_playDescription"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="恐惧是每个人心里都会养着的一只野兽，请务必驯服它的张牙舞爪。在坚持梦想的路上，愿你无畏前行。From Camille Marotte"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />
    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>